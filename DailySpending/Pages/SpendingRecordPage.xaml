		<Button Content="Income" HorizontalAlignment="Left" Height="55" Margin="335,132,0,0" VerticalAlignment="Top" Width="224" FontSize="26.667"/>
		<Button Content="Transfer" HorizontalAlignment="Left" Height="55" Margin="579,132,0,0" VerticalAlignment="Top" Width="223" FontSize="26.667"/>
		<Button Content="Borrow" HorizontalAlignment="Left" Height="55" Margin="819,132,0,0" VerticalAlignment="Top" Width="224" FontSize="26.667"/>
    	
